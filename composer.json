{
  "name"        : "CalderaWP/cwp",
  "description" : "calderawp.com",
  "authors"     : [
    {
      "name"    : "Josh Pollock",
      "email"   : "Josh@joshpress.net",
      "homepage": "http://joshpress.net/"
    },
    {
      "name"    : "David Cramer",
      "homepage": "http://cramer.co.za"
    }
  ],
  "type"        : "project",
  "minimum-stability": "dev",
  "repositories": [
    {
      "type": "composer",
      "url" : "http://wpackagist.org"
    },
    {
      "type": "git",
      "url": "https://github.com/pods-framework/pods-json-api"
    },
    {
      "type": "git",
      "url": "https://github.com/pods-framework/pods-deploy"
    },
    {
      "type": "git",
      "url": "https://github.com/pods-framework/pods"
    },
    {
      "type" : "git",
      "url"  : "https://bitbucket.org/calderadev/caldera-easy-pods"
    },
    {
      "type" : "git",
      "url"  : "https://github.com/pods-framework/pods-frontier"
    },
    {
      "type" : "git",
      "url"  : "https://github.com/Desertsnowman/Caldera-Forms"
    },
    {
      "type" : "git",
      "url"  : "https://bitbucket.org/shelob9/wb-db-migrate-pro"
    },
    {
      "type" : "git",
      "url"  : "https://bitbucket.org/calderadev/edd-recurring"
    },
    {
      "type" : "git",
      "url"  : "https://bitbucket.org/calderadev/edd-software-licensing"
    },
    {
      "type" : "git",
      "url"  : "https://github.com/Desertsnowman/Caldera-Forms"
    },
    {
      "type" : "git",
      "url"  : "https://bitbucket.org/shelob9/wp-migrate-db-pro-files-addon"
    }
  ],
  "require"     : {
    "johnpbloch/wordpress"                                      : "4.1",
    "pods-framework/pods"                                       : "2.x",
    "wpackagist-plugin/json-rest-api"                           : "*",
    "pods-framework/pods-deploy"                                : "*",
    "pods-framework/pods-json-api"                              : "*",
    "wpackagist-plugin/easy-digital-downloads"                  : "*",
    "wpackagist-plugin/log-viewer"                              : "*",
    "wpackagist-theme/twentyfifteen"                            : "*",
    "wpackagist-theme/hemingway"                                : "*",
    "calderawp/caldera-easy-pods"                               : "*",
    "wpackagist-plugin/edd-prevent-eu-checkout"                 : "*",
    "pods-framework/pods-frontier"                              : "*",
    "wpackagist-plugin/pods-frontier-auto-template"             : "*",
    "wpackagist-plugin/edd-coming-soon"                         : "*",
    "wpackagist-plugin/sidebar-login"                           : "*",
    "shelob9/wp-migrate-db-pro"                                 : "*",
    "calderawp/edd-software-licenses"                           : "*",
    "calderawp/edd-recurring"                                   : "*",
    "wpackagist-plugin/restricted-site-access"                  : "*",
    "shelob9/wp-migrate-db-pro-files-addon"                     : "*",
    "wpackagist-plugin/code-snippets-cpt"                       : "*",
    "wpackagist-plugin/wordpress-seo"                           : "*",
    "Desertsnowman/caldera-forms"                               : "*"
  },
  "require-dev" : {
    "wpackagist-plugin/log-deprecated-notices"              : "*",
    "wpackagist-plugin/debug-bar"                           : "*",
    "wpackagist-plugin/debug-bar-console"                   : "*",
    "wpackagist-plugin/user-switching"                      : "*",
    "wpackagist-plugin/simply-show-ids"                     : "*"
  },
  "extra"       : {
    "wordpress-install-dir": "public/wp",
    "installer-paths": {
      "public/cwp-content/plugins/{$name}/" : ["type:wordpress-plugin"],
      "public/cwp-content/themes/{$name}/"  : ["type:wordpress-theme"]
    }
  }
}
